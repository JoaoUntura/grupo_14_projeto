<%\n  const brand = typeof brand !== 'undefined' ? brand : 'Sabor do Campo';\n  const user  = typeof user  !== 'undefined' ? user  : {};\n  const avatarUrl = typeof avatarUrl !== 'undefined' ? avatarUrl : null;\n%>
<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Perfil – ' + brand %></title>
  <style>
    :root{
      --green-900:#183a1a;
      --green-600:#2e6a35;
      --cream:#f6efdf;
      --muted:#e5e7eb;
      --ink:#0f1a12;
      --radius:14px;
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{ margin:0; font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,"Helvetica Neue",Arial; color:#111; background:var(--cream); }

    .topbar{ height:96px; background:var(--green-900); color:#fff; display:flex; align-items:center; justify-content:center; position:relative; }
    .brand{ background:#2a552d; border:2px solid #d1f0d0; color:#fff; padding:.55rem 1.2rem; border-radius:12px; font-weight:700; letter-spacing:.2px; }
    .logout{ position:absolute; right:20px; top:50%; transform:translateY(-50%); background:#2a552d; color:#fff; border:2px solid #8fbe90; padding:10px 16px; border-radius:12px; font-weight:700; text-decoration:none; }

    .container{ max-width:920px; margin:0 auto; padding:32px 20px 64px; }

    .profile{ display:flex; flex-direction:column; align-items:center; gap:24px; }
    .avatar{ width:220px; height:220px; border-radius:50%; background:#ddd; border:3px solid #2f5d2f; display:grid; place-items:center; color:#222; font-size:32px; font-weight:600; letter-spacing:.4px; overflow:hidden; }
    .avatar img{ width:100%; height:100%; object-fit:cover; border-radius:50%; }

    .form{ width:100%; margin-top:6px; }
    .field{ display:grid; grid-template-columns: 170px 1fr; align-items:center; gap:16px; margin:16px 0; }
    .field label{ font-size:20px; color:#0f1a12; }
    input{ height:48px; border:none; outline:none; padding:0 14px; border-radius:10px; background:var(--muted); font-size:18px; color:#111; width:100%; }

    .actions{ display:flex; gap:14px; justify-content:flex-end; margin-top:22px; }
    .btn{ appearance:none; border:none; background:var(--green-600); color:#fff; padding:12px 18px; border-radius:12px; font-weight:700; cursor:pointer; box-shadow: 0 2px 0 rgba(0,0,0,.25); }
    .btn--secondary{ background:#2a552d; }

    @media (max-width:640px){ .field{ grid-template-columns: 1fr; } .field label{ font-size:16px; } }
  </style>
</head>
<body>
  <header class="topbar">
    <div class="brand"><%= brand %></div>
    <a class="logout" href="#">Logout</a>
  </header>

  <main class="container">
    <section class="profile">
      <div class="avatar">
        <% if (avatarUrl) { %>
          <img src="<%= avatarUrl %>" alt="Foto do perfil" />
        <% } else { %>
          “Foto”
        <% } %>
      </div>

      <form class="form" autocomplete="off">
        <div class="field">
          <label for="email">Email:</label>
          <input id="email" type="email" value="<%= (user.email || 'xxxxxxxxxxxxxx@xxxxxx') %>" />
        </div>

        <div class="field">
          <label for="endereco">Endereço:</label>
          <input id="endereco" type="text" value="<%= (user.address || 'xxxxxxx') %>" />
        </div>

        <div class="field">
          <label for="telefone">Telefone:</label>
          <input id="telefone" type="text" value="<%= (user.phone || '(xx) xxxxxxxxx') %>" />
        </div>

        <div class="field">
          <label for="senha">Nova Senha:</label>
          <input id="senha" type="password" />
        </div>

        <div class="field">
          <label for="confirma">Confirmar Senha:</label>
          <input id="confirma" type="password" />
        </div>

        <div class="actions">
          <button type="button" class="btn btn--secondary">Editar</button>
          <button type="submit" class="btn">Salvar</button>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
