<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Clientes</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="d-flex">
      <!-- Sidebar -->
      <div class="sidebar p-3 text-white">
        <h5>Menu:</h5>
        <ul class="nav flex-column">
          <li class="nav-item"><a href="/" class="nav-link">Menu</a></li>
          <li class="nav-item"><a href="/produtos" class="nav-link">Produtos</a></li>
          <li class="nav-item"><a href="/clientes" class="nav-link active">Clientes</a></li>
          <li class="nav-item"><a href="/funcionarios" class="nav-link">Funcion√°rios</a></li>
          <li class="nav-item"><a href="#" class="nav-link disabled">Pedidos (Desenvolvendo)</a></li>
          <li class="nav-item"><a href="#" class="nav-link disabled">Entregas (Desenvolvendo)</a></li>
          <li class="nav-item"><a href="#" class="nav-link disabled">Gr√°ficos (Desenvolvendo)</a></li>
          <li class="nav-item"><a href="#" class="nav-link disabled">Pagamentos (Desenvolvendo)</a></li>
        </ul>
      </div>

      <!-- Conte√∫do principal -->
      <div class="container-fluid p-4">
        <!-- Topbar -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="brand">Sabor do Campo</h3>
          <button class="btn btn-secondary">Logout</button>
        </div>

        <!-- Formul√°rio de clientes -->
        <div class="card shadow p-4 mb-4">
          <h2 class="mb-3">Cadastro de Clientes</h2>
          <form id="form-cliente" method="POST" action="/clientes">
            <div class="mb-3">
              <label for="nome" class="form-label">Nome:</label>
              <input type="text" class="form-control" id="nome" name="nome" required />
            </div>

            <div class="mb-3">
              <label for="telefone" class="form-label">Telefone:</label>
              <input
                type="text"
                class="form-control"
                id="telefone"
                name="telefone"
                placeholder="(XX) XXXXX-XXXX"
                required
              />
            </div>

            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">Salvar</button>
              <button type="button" id="btn-gerenciar" class="btn btn-success">Gerenciar Clientes</button>
            </div>

            <div id="feedback" class="mt-3"></div>
          </form>
        </div>

        <!-- üìã Lista de Clientes -->
        <div class="card shadow p-4">
          <h2 class="mb-3">Lista de Clientes</h2>

          <% if (clientes && clientes.length > 0) { %>
            <table class="table table-striped align-middle">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nome</th>
                  <th>Contato</th>
                </tr>
              </thead>
              <tbody>
                <% clientes.forEach(cliente => { %>
                  <tr>
                    <td><%= cliente.id %></td>
                    <td><%= cliente.nome %></td>
                    <td><%= cliente.contato %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-muted">Nenhum cliente cadastrado ainda.</p>
          <% } %>
        </div>
      </div>
    </div>

    <script src="renderer.js"></script>
  </body>
</html>
