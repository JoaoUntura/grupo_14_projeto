<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Pedidos</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/personalizado.css">
    
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="d-flex">
      
      <%- include('partials/sidebar', { user: user }) %>

      <div class="pagina-conteudo">
        <%- include('partials/logout') %>

        <div class="main-card-wrapper">
          
          <h2 class="page-title">Pedidos</h2>

          <div class="content-card">

            <div class="inner-card">
              <h5 class="card-title-header">Cadastro de Pedido</h5>

              <form id="form-pedido" method="POST" action="/pedidos">
                
                <div class="mb-3">
                  <label for="cliente" class="custom-label">Cliente:</label>
                  <select class="custom-select" id="cliente" name="clienteId" required>
                    <option value="">Selecione um cliente</option>
                    <% clientes.forEach(cliente => { %>
                      <option value="<%= cliente.id %>"><%= cliente.nome %> - <%= cliente.contato %></option>
                    <% }); %>
                  </select>
                </div>

                <h6 class="mt-4 mb-3 card-title-header">Produtos:</h6>
                <div class="produtos-list">
                  <% produtos.forEach(produto => { %>
                    <div class="form-check d-flex align-items-center mb-2">
                      <input
                        class="form-check-input produto-checkbox me-2"
                        type="checkbox"
                        value="<%= produto.id %>"
                        id="produto_<%= produto.id %>"
                        data-preco="<%= produto.preco %>"
                      />
                      <label class="form-check-label me-4 custom-label" for="produto_<%= produto.id %>">
                        <%= produto.nome %> (R$ <%= parseFloat(produto.preco).toFixed(2) %>)
                      </label>
                      
                      <input
                        type="number"
                        class="form-control custom-input-qty"
                        id="quantidade_<%= produto.id %>"
                        name="quantidade_<%= produto.id %>"
                        min="1"
                        value="1"
                        style="display: none; width: 80px;"
                      />
                    </div>
                  <% }); %>
                </div>

                <div class="mt-4 mb-3 p-3 total-box">
                    <label for="total" class="custom-label">Total do Pedido:</label>
                    <input type="text" class="custom-input" id="total" name="total" value="0.00" readonly />
                </div>

                <div class="d-flex gap-2">
                  <button type="submit" class="custom-button">Salvar Pedido</button>
                  <a href="/pedidos" class="custom-button secondary-button">Gerenciar Pedidos</a>
                </div>

                <div id="feedback" class="mt-3"></div>
              </form>
            </div>
          </div>
        </div> </div>
    </div>

    <script>
      const checkboxes = document.querySelectorAll('.produto-checkbox');
      const totalInput = document.getElementById('total');

      function atualizarTotal() {
        let total = 0;
        checkboxes.forEach(chk => {
          const preco = parseFloat(chk.dataset.preco);
          const qtdInput = document.getElementById('quantidade_' + chk.value);

          if (chk.checked) {
            const qtd = parseInt(qtdInput.value) || 1;
            total += preco * qtd;
          }
        });
        totalInput.value = total.toFixed(2);
      }

      checkboxes.forEach(chk => {
        const qtdInput = document.getElementById('quantidade_' + chk.value);

        chk.addEventListener('change', () => {
          if (chk.checked) {
            qtdInput.style.display = 'block';
          } else {
            qtdInput.style.display = 'none';
            qtdInput.value = 1;
          }
          atualizarTotal();
        });

        qtdInput.addEventListener('input', atualizarTotal);
      });

      // Inicializa o total
      atualizarTotal();
    </script>
  </body>
</html>