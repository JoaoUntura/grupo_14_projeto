<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Pedidos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="d-flex">
      <!-- Sidebar -->
      <div class="sidebar p-3 text-white">
        <h5>Menu:</h5>
        <ul class="nav flex-column">
          <li class="nav-item"><a href="/" class="nav-link">Menu</a></li>
          <li class="nav-item"><a href="/produtos" class="nav-link">Produtos</a></li>
          <li class="nav-item"><a href="/clientes" class="nav-link">Clientes</a></li>
          <li class="nav-item"><a href="/funcionarios" class="nav-link">Funcion√°rios</a></li>
          <li class="nav-item"><a href="/pedidos" class="nav-link active">Pedidos</a></li>
          <li class="nav-item"><a href="#" class="nav-link disabled">Entregas (Desenvolvendo)</a></li>
          <li class="nav-item"><a href="#" class="nav-link disabled">Gr√°ficos (Desenvolvendo)</a></li>
          <li class="nav-item"><a href="#" class="nav-link disabled">Pagamentos (Desenvolvendo)</a></li>
        </ul>
      </div>

      <!-- Conte√∫do principal -->
      <div class="container-fluid p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h3 class="brand">Sabor do Campo</h3>
          <div>
            <button class="btn btn-secondary">Logout</button>
          </div>
        </div>

        <!-- üßæ Formul√°rio de Pedido -->
        <div class="card shadow p-4 mb-4">
          <h2 class="mb-3">Cadastro de Pedido</h2>

          <form id="form-pedido" method="POST" action="/pedidos">
            <!-- Cliente -->
            <div class="mb-3">
              <label for="cliente" class="form-label">Cliente:</label>
              <select class="form-select" id="cliente" name="clienteId" required>
                <option value="">Selecione um cliente</option>
                <% clientes.forEach(cliente => { %>
                  <option value="<%= cliente.id %>"><%= cliente.nome %> - <%= cliente.contato %></option>
                <% }) %>
              </select>
            </div>

            <!-- Data -->
            <div class="mb-3">
              <label for="dataPedido" class="form-label">Data do Pedido:</label>
              <input type="date" class="form-control" id="dataPedido" name="dataPedido" required />
            </div>

            <!-- Produtos -->
            <div class="mb-3">
              <label class="form-label">Produtos:</label>
              <div class="border rounded p-3">
                <% produtos.forEach(produto => { %>
                  <div class="row align-items-center mb-2">
                    <div class="col-md-6">
                      <div class="form-check">
                        <input
                          class="form-check-input produto-checkbox"
                          type="checkbox"
                          name="produtos"
                          value="<%= produto.id %>"
                          id="produto_<%= produto.id %>"
                          data-preco="<%= produto.preco %>"
                        />
                        <label class="form-check-label" for="produto_<%= produto.id %>">
                          <%= produto.nome %> ‚Äî R$ <%= parseFloat(produto.preco).toFixed(2) %>
                        </label>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <input
                        type="number"
                        class="form-control quantidade-input"
                        name="quantidades[<%= produto.id %>]"
                        id="quantidade_<%= produto.id %>"
                        min="1"
                        value="1"
                        style="display:none;"
                      />
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>

            <!-- Total -->
            <div class="mb-3">
              <label for="total" class="form-label">Total (R$):</label>
              <input type="text" class="form-control" id="total" name="total" readonly value="0.00" />
            </div>

            <!-- Entregue -->
            <div class="mb-3">
              <label for="entregue" class="form-label">Status da Entrega:</label>
              <select class="form-select" id="entregue" name="entregue" required>
                <option value="false">N√£o Entregue</option>
                <option value="true">Entregue</option>
              </select>
            </div>

            <!-- Bot√µes -->
            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">Salvar Pedido</button>
              <a href="/pedidos" class="btn btn-secondary">Gerenciar Pedidos</a>
            </div>

            <div id="feedback" class="mt-3"></div>
          </form>
        </div>

        <!-- üìã Lista de Pedidos -->
        <div class="card shadow p-4">
          <h2 class="mb-3">Lista de Pedidos</h2>

          <% if (pedidos && pedidos.length > 0) { %>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Cliente</th>
                  <th>Data</th>
                  <th>Produtos</th>
                  <th>Total (R$)</th>
                  <th>Entregue</th>
                </tr>
              </thead>
              <tbody>
                <% pedidos.forEach(pedido => { %>
                  <tr>
                    <td><%= pedido.id %></td>
                    <td><%= pedido.nome %></td>
                    <td><%= pedido.data %></td>
                    <td>
                      <% pedido.produtos.forEach((p, i) => { %>
                        <%= p %> <%= i < pedido.produtos.length - 1 ? ', ' : '' %>
                      <% }) %>
                    </td>
                    <td><%= parseFloat(pedido.total).toFixed(2) %></td>
                    <td><%= pedido.entregue ? 'Sim' : 'N√£o' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-muted">Nenhum pedido cadastrado ainda.</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- üßÆ Script para c√°lculo autom√°tico -->
    <script>
      const checkboxes = document.querySelectorAll('.produto-checkbox');
      const totalInput = document.getElementById('total');

      function atualizarTotal() {
        let total = 0;
        checkboxes.forEach(chk => {
          const preco = parseFloat(chk.dataset.preco);
          const qtdInput = document.getElementById('quantidade_' + chk.value);

          if (chk.checked) {
            const qtd = parseInt(qtdInput.value) || 1;
            total += preco * qtd;
          }
        });
        totalInput.value = total.toFixed(2);
      }

      checkboxes.forEach(chk => {
        const qtdInput = document.getElementById('quantidade_' + chk.value);

        chk.addEventListener('change', () => {
          if (chk.checked) {
            qtdInput.style.display = 'block';
          } else {
            qtdInput.style.display = 'none';
            qtdInput.value = 1;
          }
          atualizarTotal();
        });

        qtdInput.addEventListener('input', atualizarTotal);
      });
    </script>

    <script src="renderer.js"></script>
  </body>
</html>
