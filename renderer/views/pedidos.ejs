<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pedidos</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/personalizado.css">
    
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    
    <div class="d-flex">
      
      <%- include('partials/sidebar', { user: user }) %>
      
      <div class="pagina-conteudo">

        <%- include('partials/logout') %>

        <div class="main-card-wrapper">
          
          <h2 class="page-title">Cadastro de Pedido</h2>

          <div class="content-card">
            
            <form id="form-pedido" method="POST" action="/pedidos">
              <div class="mb-3">
                <label for="cliente" class="form-label custom-label">Cliente:</label>
                <select class="form-select" id="cliente" name="clienteId" required>
                  <option value="">Selecione um cliente</option>
                  <% clientes.forEach(cliente => { %>
                    <option value="<%= cliente.id %>"><%= cliente.nome %> - <%= cliente.contato %></option>
                  <% }) %>
                </select>
              </div>

              <div class="mb-3">
                <label for="dataPedido" class="form-label custom-label">Data do Pedido:</label>
                <input type="date" class="form-control" id="dataPedido" name="dataPedido" required />
              </div>

              <div class="mb-3">
                <label class="form-label custom-label">Produtos:</label>
                <div class="border rounded p-3">
                  <% produtos.forEach(produto => { %>
                    <div class="row align-items-center mb-2">
                      <div class="col-md-6">
                        <div class="form-check">
                          <input
                            class="form-check-input produto-checkbox"
                            type="checkbox"
                            name="produtos"
                            value="<%= produto.id %>"
                            id="produto_<%= produto.id %>"
                            data-preco="<%= produto.preco %>"
                          />
                          <label class="form-check-label" for="produto_<%= produto.id %>">
                            <%= produto.nome %> — R$ <%= parseFloat(produto.preco).toFixed(2) %>
                          </label>
                        </div>
                      </div>
                      <div class="col-md-3">
                        <input
                          type="number"
                          class="form-control quantidade-input"
                          name="quantidades[<%= produto.id %>]"
                          id="quantidade_<%= produto.id %>"
                          min="1"
                          value="1"
                          style="display:none;"
                        />
                      </div>
                    </div>
                  <% }) %>
                </div>
              </div>

              <div class="mb-3">
                <label for="total" class="form-label custom-label">Total (R$):</label>
                <input type="text" class="form-control" id="total" name="total" readonly value="0.00" />
              </div>

              <div class="mb-3">
                <label for="entregue" class="form-label custom-label">Status da Entrega:</label>
                <select class="form-select" id="entregue" name="entregue" required>
                  <option value="false">Não Entregue</option>
                  <option value="true">Entregue</option>
                </select>
              </div>

              <div class="d-flex gap-2">
                <button type="submit" class="custom-button">Salvar Pedido</button>
                <a href="/pedidos" class="secondary-button">Gerenciar Pedidos</a>
              </div>

              <div id="feedback" class="mt-3"></div>
            </form>
          </div>
          </div>
        </div>
      </div>
    <script>
      const checkboxes = document.querySelectorAll('.produto-checkbox');
      const totalInput = document.getElementById('total');

      function atualizarTotal() {
        let total = 0;
        checkboxes.forEach(chk => {
          const preco = parseFloat(chk.dataset.preco);
          const qtdInput = document.getElementById('quantidade_' + chk.value);

          if (chk.checked) {
            const qtd = parseInt(qtdInput.value) || 1;
            total += preco * qtd;
          }
        });
        totalInput.value = total.toFixed(2);
      }

      checkboxes.forEach(chk => {
        const qtdInput = document.getElementById('quantidade_' + chk.value);

        chk.addEventListener('change', () => {
          if (chk.checked) {
            qtdInput.style.display = 'block';
          } else {
            qtdInput.style.display = 'none';
            qtdInput.value = 1;
          }
          atualizarTotal();
        });

        qtdInput.addEventListener('input', atualizarTotal);
      });
    </script>

    <script src="renderer.js"></script>
  </body>
</html>