<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gerenciar Produtos</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css" />
    <link rel="stylesheet" href="../css/personalizado.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  

  <body>
    <!-- Modal Editar Produto -->
  <div class="modal fade" id="modalEditarProduto" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="formEditarProduto">
          <div class="modal-header">
            <h5 class="modal-title">Editar Produto</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <div class="modal-body">
            <input type="hidden" id="edit-id" />

            <div class="mb-3">
              <label class="form-label">Nome</label>
              <input type="text" id="edit-nome" class="form-control" required />
            </div>

            <div class="mb-3">
              <label class="form-label">Preço (R$)</label>
              <input
                type="number"
                step="0.01"
                id="edit-preco"
                class="form-control"
                required
              />
            </div>
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancelar
            </button>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
    <div class="d-flex">
      <%- include('partials/sidebar', { user: user }) %>

      <div class="pagina-conteudo">
        <%- include('partials/logout') %>

        <div class="main-card-wrapper">
          <h2 class="page-title">Gerenciar Produtos</h2>

          <div class="content-card">
            <h4 class="card-title-header">Lista de Produtos Cadastrados</h4>

            <div class="mb-3">
              <a href="/produtos" class="secondary-button custom-button"
                >Novo Cadastro</a
              >
            </div>

            <% if (produtos && produtos.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-striped custom-table">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Preço (R$)</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  <% produtos.forEach(produto => { %>
                  <tr data-produto-id="<%= produto.id %>">
                    <td><%= produto.id %></td>
                    <td><%= produto.nome %></td>
                    <td>R$ <%= parseFloat(produto.preco).toFixed(2) %></td>
                    <td>
                      <button
                        class="btn btn-sm custom-button secondary-button btn-edit-produto"
                      >
                        Editar
                      </button>
                      <button
                        class="btn btn-sm custom-button btn-danger btn-delete-produto"
                      >
                        Excluir
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <% } else { %>
            <p class="text-muted">Nenhum produto cadastrado ainda.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <script src="../js/bootstrap.bundle.min.js"></script>
    <script src="renderer.js"></script>
    <script>
        
      // Simulação de ações (Editar/Excluir) - Seu amigo irá substituir por chamadas de API
      const modalEditar = new bootstrap.Modal(
        document.getElementById("modalEditarProduto")
      );

      // Abrir modal ao clicar em Editar
      document.querySelectorAll(".btn-edit-produto").forEach((btn) => {
        btn.addEventListener("click", async (e) => {
          const row = e.target.closest("tr");
          const id = row.dataset.produtoId;
            console.log(id)
          // Buscar dados do produto
          const res = await fetch(`/gerenciar_produtos/${id}`);
          const produto = await res.json();

          // Preencher o modal
          document.getElementById("edit-id").value = produto.id;
          document.getElementById("edit-nome").value = produto.nome;
          document.getElementById("edit-preco").value = produto.preco;

          // Abrir modal
          modalEditar.show();
        });
      });

      // Enviar edição
      document
        .getElementById("formEditarProduto")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          const id = document.getElementById("edit-id").value;

          const dadosAtualizados = {
            nome: document.getElementById("edit-nome").value,
            preco: document.getElementById("edit-preco").value,
          };

          const res = await fetch(`/gerenciar_produtos/${id}`, {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(dadosAtualizados),
          });

          modalEditar.hide();
          window.location.reload();
        });

      document.querySelectorAll(".btn-delete-produto").forEach((button) => {
        button.addEventListener("click", (e) => {
          const row = e.target.closest("tr");
          const produtoId = row.dataset.produtoId;
          if (
            confirm(`Tem certeza que deseja excluir o Produto ${produtoId}?`)
          ) {
            fetch(`/gerenciar_produtos/${produtoId}`, {
              method: "DELETE",
            }).then(() => {
              window.location.reload();
            });
          }
        });
      });
    </script>
    
  </body>
</html>
