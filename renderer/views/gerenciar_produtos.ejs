<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gerenciar Produtos</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/personalizado.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="d-flex">
      
      <%- include('partials/sidebar', { user: user }) %>
      
      <div class="pagina-conteudo">
        <%- include('partials/logout') %>

        <div class="main-card-wrapper">

          <h2 class="page-title">Gerenciar Produtos</h2>

          <div class="content-card">
          
            <h4 class="card-title-header">Lista de Produtos Cadastrados</h4>

            <div class="mb-3">
                <a href="/produtos/cadastro" class="secondary-button custom-button">Novo Cadastro</a>
            </div>

            <% 
                // Dados simulados para o back-end
                const produtos_mock = [
                    { id: 1, nome: "milho", preco: 5.00 },
                    { id: 2, nome: "tomate", preco: 3.50 },
                    { id: 3, nome: "AAA", preco: 123.00 }
                ];
            %>
            <% if (produtos_mock && produtos_mock.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped custom-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Preço (R$)</th>
                                <th>Ações</th> </tr>
                        </thead>
                        <tbody>
                            <% produtos_mock.forEach(produto => { %>
                                <tr data-produto-id="<%= produto.id %>">
                                    <td><%= produto.id %></td>
                                    <td><%= produto.nome %></td>
                                    <td>R$ <%= parseFloat(produto.preco).toFixed(2) %></td>
                                    <td>
                                        <button class="btn btn-sm custom-button secondary-button btn-edit-produto">Editar</button>
                                        <button class="btn btn-sm custom-button btn-danger btn-delete-produto">Excluir</button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-muted">Nenhum produto cadastrado ainda.</p>
            <% } %>
          </div>
        </div> </div>
    </div>

    <script>
        // Simulação de ações (Editar/Excluir) - Seu amigo irá substituir por chamadas de API
        document.querySelectorAll('.btn-edit-produto').forEach(button => {
            button.addEventListener('click', (e) => {
                const produtoId = e.target.closest('tr').dataset.produtoId;
                console.log(`Editar Produto ${produtoId}`);
                alert(`Simulação: Redirecionar para página de edição do Produto ${produtoId}`);
                // Geralmente redireciona para /produtos/editar/1
            });
        });

        document.querySelectorAll('.btn-delete-produto').forEach(button => {
            button.addEventListener('click', (e) => {
                const row = e.target.closest('tr');
                const produtoId = row.dataset.produtoId;
                if (confirm(`Tem certeza que deseja excluir o Produto ${produtoId}?`)) {
                    console.log(`Excluir Produto ${produtoId}`);
                    // AQUI: Chamar a API DELETE (ex: DELETE /api/produtos/1)
                    row.remove(); // Simula a exclusão no front-end
                }
            });
        });
    </script>
    <script src="../js/bootstrap.bundle.min.js"></script>
    <script src="renderer.js"></script>
  </body>
</html>